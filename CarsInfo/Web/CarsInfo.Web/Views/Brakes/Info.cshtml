@model BrakesInfoServiceModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">

    <h1 class="my-4">@Model.Type Brakes</h1>

    <div class="row">

        <div class="col-md-8">
            @if (Model.Image != null)
            {
                string imageBase64Data = Convert.ToBase64String(Model.Image.ImageData);
                string imageSrc = "data:image/jpg;base64," + imageBase64Data;
                <img class="img-fluid rounded mb-3 mb-md-0" src="@imageSrc" alt="">
            }
            else
            {
                <img class="img-fluid rounded mb-3 mb-md-0" src="http://simn-global.org/wp-content/uploads/2018/10/no-image-700x300.jpg" alt="">
            }
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Brakes Description</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Details</h3>
            <ul>
                <li>Id: @Model.Id</li>
                <li>Type: @Model.Type</li>
                <li>Condition: @Model.Used</li>
            </ul>
        </div>

    </div>
