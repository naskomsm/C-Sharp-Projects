@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">Cars-info</h1>
            <div class="list-group">
                <a href="Car/All" class="list-group-item">Cars</a>
                <a href="Engine/All" class="list-group-item">Engines</a>
                <a href="Brakes/All" class="list-group-item">Brakes</a>
                <a href="Suspension/All" class="list-group-item">Suspensions</a>
                <a href="Wheels/All" class="list-group-item">Wheels</a>
            </div>

        </div>

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="http://www.acornexclusivecars.com/Acorn-Exclusive-Cars-Audi-A6-900x350.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="https://irp-cdn.multiscreensite.com/30709730/dms3rep/multi/desktop/slide-2-900x350.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="https://irp-cdn.multiscreensite.com/30709730/dms3rep/multi/desktop/slide-1-900x350.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                @foreach (var brakes in @Model.Brakes)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="/Brakes/Info/@brakes.Id">
                                @if (brakes.Image != null)
                                {
                                    string imageBase64Data = Convert.ToBase64String(brakes.Image.ImageData);
                                    string imageSrc = "data:image/jpg;base64," + imageBase64Data;
                                    <img class="card-img-top" src="@imageSrc" alt="">
                                }
                                else
                                {
                                    <img class="card-img-top" src="http://simn-global.org/wp-content/uploads/2018/10/no-image-700x300.jpg" alt="">
                                }
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="/Brakes/Info/@brakes.Id">@brakes.Name</a>
                                </h4>
                                <h5>Price - $@brakes.Price</h5>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="/Wheels/Info/@Model.Wheels.Id">
                            @if (@Model.Wheels.Image != null)
                            {
                                string imageBase64Data = Convert.ToBase64String(@Model.Wheels.Image.ImageData);
                                string imageSrc = "data:image/jpg;base64," + imageBase64Data;
                                <img class="card-img-top" src="@imageSrc" alt="">
                            }
                            else
                            {
                                <img class="card-img-top" src="http://simn-global.org/wp-content/uploads/2018/10/no-image-700x300.jpg" alt="">
                            }
                        </a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="/Wheels/Info/@Model.Wheels.Id">@Model.Wheels.Name</a>
                            </h4>
                            <h5>Price - $@Model.Wheels.Price</h5>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="/Suspension/Info/@Model.Suspension.Id">
                            @if (@Model.Suspension.Image != null)
                            {
                                string imageBase64Data = Convert.ToBase64String(@Model.Suspension.Image.ImageData);
                                string imageSrc = "data:image/jpg;base64," + imageBase64Data;
                                <img class="card-img-top" src="@imageSrc" alt="">
                            }
                            else
                            {
                                <img class="card-img-top" src="http://simn-global.org/wp-content/uploads/2018/10/no-image-700x300.jpg" alt="">
                            }
                        </a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="/Suspension/Info/@Model.Suspension.Id">@Model.Suspension.Name</a>
                            </h4>
                            <h5>Price - $@Model.Suspension.Price</h5>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>

                @*TODO CAR AND ENGINE*@

            </div>
        </div>
    </div>
</div>
