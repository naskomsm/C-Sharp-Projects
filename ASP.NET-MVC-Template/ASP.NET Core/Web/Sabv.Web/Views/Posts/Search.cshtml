@model SearchPageViewModel

@{
    ViewData["Title"] = "Търсене на обява";
}

<form action="/Posts/SearchPosts" method="get">

    <div class="row">
        <div class="col container mt-3">
            <h6 id="pageHeader">Търсене в SellAndBuyVehicles</h6>
            <hr />
            <div>

                <div class="row mt-2 mb-2">
                    <div class="col-4">
                        <div class="ml-2">

                            <p class="mb-1 small">Основна категория</p>
                            <select class="mdb-select md-form container" id="categorySelect" name="postCategory">
                                <option>Всички</option>
                                @foreach (var item in Model.Categories)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                    </div>


                    <div class="col-4 pl-5">
                        <p class="mb-1 small">Състояние</p>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                            <label class="form-check-label" for="inlineRadio1">Употребяван</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                            <label class="form-check-label" for="inlineRadio2">Нов</label>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Марка</p>
                            <select class="mdb-select md-form container" id="makesSelect" name="make"></select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Модел</p>
                            <select class="mdb-select md-form container" id="modelsSelect" name="model">
                                <option value="1">Всички</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Макс.пробег в км</p>
                            <input class="form-control form-control-sm container" type="text" name="maxMileage">
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Тип двигател</p>
                            <select class="mdb-select md-form container" name="engineType">
                                <option value="">Всички</option>
                                <option value="Бензинов">Бензинов</option>
                                <option value="Дизелов">Дизелов</option>
                                <option value="Електрически">Електрически</option>
                                <option value="Хибриден">Хибриден</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">Мощност [к.с.] (От)</p>
                            <input class="form-control form-control-sm container" type="text" name="horsePowerFrom">
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">(До)</p>
                            <input class="form-control form-control-sm container" type="text" name="horsePowerTo">
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">Евростандарт</p>
                            <select class="mdb-select md-form container" name="eurostandard">
                                <option value="">Всички</option>
                                <option value="1">Евро 1</option>
                                <option value="2">Евро 2</option>
                                <option value="3">Евро 3</option>
                                <option value="4">Евро 4</option>
                                <option value="5">Евро 5</option>
                                <option value="6">Евро 6</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Скоростна кутия</p>
                            <select class="mdb-select md-form container" name="transmissionType">
                                <option value="">Всички</option>
                                <option value="Ръчна">Ръчна</option>
                                <option value="Автоматична">Автоматична</option>
                                <option value="Полуавтоматична">Полуавтоматична</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Категория</p>
                            <select class="mdb-select md-form container" name="carCategory">
                                <option>Всички</option>
                                @foreach (var item in Model.CarTypeCategories)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">Цена (От)</p>
                            <input class="form-control form-control-sm container" type="text" name="priceFrom">
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">(До)</p>
                            <input class="form-control form-control-sm container" type="text" name="priceTo">
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">Валута</p>
                            <select class="mdb-select md-form container" name="currency">
                                <option value="">Всички</option>
                                <option value="лв.">лв.</option>
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Година на производство (От)</p>
                            <select class="mdb-select md-form container" name="yearFrom">
                                @foreach (var item in Model.Years)
                                {
                                    <option>от @item</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">(До)</p>
                            <select class="mdb-select md-form container" name="yearTo">
                                @foreach (var item in Model.Years)
                                {
                                    <option>до @item</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-6">
                        <div class="ml-2">
                            <p class="mb-1 small">Цвят</p>
                            <select class="mdb-select md-form container" name="color">
                                @foreach (var item in Model.Colors)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-6 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Населено място</p>
                            <select class="mdb-select md-form container" name="town">
                                @foreach (var item in Model.Cities)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>

                <div class="row mt-4 mb-2">

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Безопасност</p>
                            @for (int i = 0; i < Model.Features.Safety.Length; i++)
                            {
                                var item = Model.Features.Safety[i];
                                var name = "safety" + i;

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="@name" value="true" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Комфорт</p>
                            @for (int i = 0; i < Model.Features.Comfort.Length; i++)
                            {
                                var item = Model.Features.Comfort[i];
                                var name = "comfort" + i;

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="@name" value="true" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Екстериор</p>
                            @for (int i = 0; i < Model.Features.Exterior.Length; i++)
                            {
                                var item = Model.Features.Exterior[i];
                                var name = "exterior" + i;

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="@name" value="true" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Други</p>
                            @for (int i = 0; i < Model.Features.Others.Length; i++)
                            {
                                var item = Model.Features.Others[i];
                                var name = "others" + i;

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="@name" value="true" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>

                </div>

                <div class="row mt-4 mb-2">
                    <div class="col-md-4 offset-md-4 pl-0 pr-4">
                        <div class="ml-2">
                            <input class="container" style="margin-top:20px;" type="submit" value="ТЪРСИ" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
