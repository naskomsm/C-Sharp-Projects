@model SearchPageViewModel

@{
    ViewData["Title"] = "Безплатно публикуване на обява";
}

<form action="/Posts/CheckText" method="get">


    <div class="row">

        <div class="col" style="border-style: groove;border-color: silver;background-color: #DFF1FF">1. Публикуване на обявата</div>
        <div class="col">
            <img src="//cdn2.focus.bg/mobile/images/picturess/nav_arrow.gif" style="padding-left: 55px;
        padding-top: 20px;
    " />
        </div>
        <div class="col" style="border-style: groove;border-color: silver;">2. Преглед на текста</div>
        <div class="col"><img src="//cdn2.focus.bg/mobile/images/picturess/nav_arrow.gif" style="padding-left: 55px;padding-top: 20px;" /></div>
        <div class="col" style="border-style: groove;border-color: silver;">3. Добавяне на снимки и видео</div>
        <div class="col"><img src="//cdn2.focus.bg/mobile/images/picturess/nav_arrow.gif" style="padding-left: 55px;padding-top: 20px;" /></div>
        <div class="col" style="border-style: groove;border-color: silver;">4. Преглед на обявата</div>

    </div>

    <div class="row">
        <div class="col container mt-3">
            <h6 id="pageHeader">Публикуване на безплатна обява - Публикуване на текст (Стъпка 1)</h6>
            <hr />
            <div>

                <div class="row mt-2 mb-2">
                    <div class="col-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Основна категория</p>
                            <select class="mdb-select md-form container" id="categorySelect" name="postCategory">
                                <option>Всички</option>
                                @foreach (var item in Model.Categories)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                    </div>


                    <div class="col-4 pl-5">
                        <p class="mb-1 small">Състояние</p>
                        <input type="radio" id="condition" name="condition" value="used">
                        <label for="male">Употребяван</label>
                        <input type="radio" id="condition" name="condition" value="new">
                        <label for="female">Нов</label>
                    </div>
                </div>

                <div class="row mt-2 mb-2">

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Марка</p>
                            <select class="mdb-select md-form container" id="makesSelect" name="make"></select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Модел</p>
                            <select class="mdb-select md-form container" id="modelsSelect" name="model">
                                <option>Всички</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Модификация</p>
                            <input class="form-control form-control-sm container" type="text" name="modification">
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Тип двигател</p>
                            <select class="mdb-select md-form container" name="engineType">
                                <option>Всички</option>
                                <option value="Petrol">Petrol</option>
                                <option value="Disel">Disel</option>
                                <option value="Electric">Electric</option>
                                <option value="Hybrid">Hybrid</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Мощност [к.с.]</p>
                            <input class="form-control form-control-sm container" type="text" name="horsePower">
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Евростандарт</p>
                            <select class="mdb-select md-form container" name="eurostandard">
                                <option>Всички</option>
                                <option value="1">Euro 1</option>
                                <option value="2">Euro 2</option>
                                <option value="3">Euro 3</option>
                                <option value="4">Euro 4</option>
                                <option value="5">Euro 5</option>
                                <option value="6">Euro 6</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Скоростна кутия</p>
                            <select class="mdb-select md-form container" name="transmissionType">
                                <option>Всички</option>
                                <option value="Manual">Manual</option>
                                <option value="Automatic">Automatic</option>
                                <option value="SemiAutomatic">Semi Automatic</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Категория</p>
                            <select class="mdb-select md-form container" name="carCategory">
                                <option>Всички</option>
                                @foreach (var item in Model.CarTypeCategories)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Цена</p>
                            <input class="form-control form-control-sm container" type="text" name="price">
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Валута</p>
                            <select class="mdb-select md-form container" name="currency">
                                <option>Всички</option>
                                <option value="лв.">LV</option>
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Година на производство (От)</p>
                            <select class="mdb-select md-form container" name="yearFrom">
                                @foreach (var item in Model.Years)
                                {
                                    <option>от @item</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">(До)</p>
                            <select class="mdb-select md-form container" name="yearTo">
                                @foreach (var item in Model.Years)
                                {
                                    <option>до @item</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Цвят</p>
                            <select class="mdb-select md-form container" name="color">
                                @foreach (var item in Model.Colors)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="ml-2">
                            <p class="mb-1 small">Населено място</p>
                            <select class="mdb-select md-form container" name="town">
                                @foreach (var item in Model.Cities)
                                {
                                    <option>@item</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Пробег</p>
                            <input class="form-control form-control-sm container" type="text" name="mileage">
                        </div>
                    </div>

                </div>

                <div class="row mt-4 mb-2">

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Безопасност</p>
                            @foreach (var item in Model.Features.Safety)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="@item" value="true" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Комфорт</p>
                            @foreach (var item in Model.Features.Comfort)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="@item" value="true" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Екстериор</p>
                            @foreach (var item in Model.Features.Exterior)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="@item" value="true" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Други</p>
                            @foreach (var item in Model.Features.Others)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="@item" value="true" />
                                    <label class="form-check-label">@item</label>
                                </div>
                            }
                        </div>
                    </div>

                </div>

                <div class="row mt-4 mb-2">

                    <div class="col-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Допълнителна информация</p>
                            <div class="form-group">
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
                            </div>
                        </div>
                    </div>


                    <div class="col-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Мобилен телефон</p>
                            <input class="form-control form-control-sm" type="text" name="mobileNumber">
                        </div>
                    </div>

                    <div class="col-4 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Email</p>
                            <input class="form-control form-control-sm" type="text" name="email">
                        </div>
                    </div>
                </div>

                <div class="row mt-4 mb-2">
                    <div class="col-md-4 offset-md-4 pl-0 pr-4">
                        <div class="ml-2">
                            <input class="container" style="margin-top:20px;" type="submit" value="ПУБЛИКУВАЙ ТЕКСТА" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>