@using Sabv.Web.ViewModels.Comments
@model CommentsAdminPanel

<form method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Comment ID</th>
                <th scope="col">Post ID</th>
                <th scope="col">Username</th>
                <th scope="col">Date</th>
                <th scope="col">Content</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model.Comments)
            {
                <tr>
                    <th scope="row">@comment.Id</th>
                    <th scope="row">@comment.Post.Id</th>
                    <td>@comment.User.UserName.Substring(0, comment.User.UserName.IndexOf("@"))</td>
                    <td>@comment.CreatedOn.ToString("MM/dd/yyyy hh:mm tt")</td>
                    <td>@comment.Content</td>
                    <td>
                        <a href="/Administration/Comments/Delete/@comment.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
