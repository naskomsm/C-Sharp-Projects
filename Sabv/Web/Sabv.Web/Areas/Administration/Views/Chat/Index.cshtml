@using Sabv.Web.ViewModels.Chat
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MessagesAdminPanel

<div class="input-group mb-4 border rounded-pill p-1">
    <div class="input-group-prepend border-0">
        <button id="button-addon4" type="button" class="btn btn-link text-info"><i class="fa fa-search"></i></button>
    </div>
    <input id="searchBar" onkeyup="filter(2)" type="search" placeholder="Search by content..." aria-describedby="button-addon4" class="form-control bg-none border-0">
</div>

<form method="post">
    s
    <table id="myTable" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Message ID</th>
                <th scope="col">Username</th>
                <th scope="col">Date</th>
                <th scope="col">Content</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model.Messages)
            {
                <tr>
                    <th scope="row">@message.Id</th>
                    <td>@message.User.UserName</td>
                    <td>@message.CreatedOn.ToString("MM/dd/yyyy hh:mm tt")</td>
                    <td>@message.Content</td>
                    <td>
                        <a asp-area="Administration" asp-controller="Chat" asp-action="Delete" asp-route-id="@message.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
