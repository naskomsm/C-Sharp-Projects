@using Sabv.Common
@using Sabv.Web.ViewModels.Posts
@model PostDetailsViewModel

@{
    this.ViewData["Title"] = "Details";
}

<div class="row font-weight-bold justify-content-between">
    <div class="col-8">
        <h3>@Model.Name</h3>
    </div>
    <div class="col-4">
        <h3 class="text-primary">@Model.Price @Model.Currency.ToString()</h3>
    </div>
</div>

<div class="row justify-content-start">
    <h6>
        <span>
            <a class="col-md-4" href="https://autodata24.com/" target="_blank">
                More cars
            </a>
        </span>
    </h6>
</div>

<div class="row justify-content-center mt-2">

    @*for now its only 1 image*@
    <div class="col-8">
        <img src="@GlobalConstants.BaseCloudinaryLink@Model.Images.FirstOrDefault().Image.Url" class="img-thumbnail" width="600" height="150">
    </div>

    <div class="col-4 text-center">
        <div class="row mb-2">
            <div class="col-4">
                <img src="@GlobalConstants.BaseCloudinaryLink@Model.User.Image.Url" class="img-thumbnail" width="100" height="50">
            </div>
            <div class="col-8">
                <div class="container text-center mt-3">
                    @Model.City.Name
                    <h5>@Model.PhoneNumber</h5>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">Manufacture date</div>
            <div class="col-6">@Model.ManufactureDate.ToString("MM/dd/yyyy")</div>
        </div>
        <div class="row">
            <div class="col-6">Engine type</div>
            <div class="col-6">@Model.EngineType.ToString()</div>
        </div>
        <div class="row">
            <div class="col-6">Horsepower</div>
            <div class="col-6">@Model.Horsepower</div>
        </div>
        <div class="row">
            <div class="col-6">Eurostandard</div>
            <div class="col-6">Euro @((int)Model.Eurostandard)</div>
        </div>
        <div class="row">
            <div class="col-6">Transmission type</div>
            <div class="col-6">@Model.TransmissionType.ToString()</div>
        </div>
        <div class="row">
            <div class="col-6">Category</div>
            <div class="col-6">@Model.VehicleCategory.Name</div>
        </div>
        <div class="row">
            <div class="col-6">Mileage</div>
            <div class="col-6">@Model.Mileage</div>
        </div>
        <div class="row">
            <div class="col-6">Color</div>
            <div class="col-6">@Model.Color.Name</div>
        </div>
        <div class="row">
            <div class="container">
                <h6>Add to favourites: <a asp-controller="Posts" asp-action="AddFavourite" asp-route-id="@Model.Id"><i class="far fa-star"></i></a></h6>
            </div>
        </div>

        <div class="row">
            <div class="container">
                <h6>Print  <a asp-controller="Posts" asp-action="AddFavourite"><i class="fas fa-print"></i></a></h6>
            </div>
        </div>

        <div class="row">
            <div class="container text-center">
                <h3>
                    <a href="https://www.facebook.com/"><i class="fab fa-facebook"></i></a>
                    <a href="/Posts/AddFavourite"><i class="fab fa-instagram"></i></a>
                    <a href="/Posts/AddFavourite"><i class="fab fa-linkedin-in"></i></a>
                </h3>
            </div>
        </div>
    </div>
</div>

<h6 class="mt-5">Допълнителна информация</h6>

<hr />

<div class="row justify-content-center">
    @Model.Description
</div>