@using Sabv.Web.ViewModels.Posts

@model SearchViewModel
@{
    this.ViewData["Title"] = "Search";
}

<form asp-controller="Posts" asp-action="All" method="get">

    <div class="row">
        <div class="col container mt-3">
            <h6 id="pageHeader">Search in SellAndBuyVehicles</h6>
            <hr />
            <div>

                <div class="row mt-2 mb-2">
                    <div class="col-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Post category</p>
                            <select asp-for="Category" asp-items="Model.Categories" class="mdb-select md-form container" id="categorySelect" name="postCategory"></select>
                        </div>
                    </div>

                    <div class="col-4 pl-5">    
                        <p class="mb-1 small">Condition</p>
                        <input type="radio" id="condition" name="condition" value="Used" checked>
                        <label for="2">Used</label>
                        <input type="radio" id="condition" name="condition" value="New">
                        <label for="1">New</label>
                    </div>

                </div>

                <div class="row mt-2 mb-2">

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Make</p>
                            <select asp-for="Make" asp-items="Model.Makes" class="mdb-select md-form container" id="makesSelect" name="make"></select>                        
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Model</p>
                            <select class="mdb-select md-form container" id="modelsSelect" name="model">
                                <option>All</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Max mileage in km</p>
                            <input asp-for="MaxMileage" class="form-control form-control-sm container" name="maxMileage"/>
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Engine type</p>
                            <select asp-for="EngineType" asp-items="Model.EngineTypes" class="mdb-select md-form container" name="engineType"></select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">Horsepower (from)</p>
                            <input asp-for="MinHorsepower" class="form-control form-control-sm container" name="horsePowerFrom" />
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">To</p>
                            <input asp-for="MaxHorsepower" class="form-control form-control-sm container" name="horsePowerFrom" />
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">Eurostandard</p>
                            <select asp-for="Eurostandard" asp-items="Model.Eurostandards" class="mdb-select md-form container" name="eurostandard"></select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Transmission type</p>
                            <select asp-for="TransmissionType" asp-items="Model.TransmissionTypes" class="mdb-select md-form container" name="transmissionType"></select>
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">Category</p>
                            <select asp-for="VehicleCategory" asp-items="Model.VehicleCategories" class="mdb-select md-form container" name="vehicleCategory"></select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">Price (From)</p>
                            <input asp-for="PriceFrom" class="form-control form-control-sm container" name="priceFrom" />
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">To</p>
                            <input asp-for="PriceTo" class="form-control form-control-sm container" name="priceFrom" />
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="ml-2">
                            <p class="mb-1 small">Currency</p>
                            <select asp-for="Currency" asp-items="Model.Currencies" class="mdb-select md-form container" name="currency"></select>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="ml-2">
                            <p class="mb-1 small">Manufacture date (from)</p>
                            <select asp-for="YearFrom" asp-items="Model.YearsFrom" class="mdb-select md-form container" name="yearFrom"></select>
                        </div>
                    </div>

                    <div class="col-3 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">to</p>
                            <select asp-for="YearTo" asp-items="Model.YearsTo" class="mdb-select md-form container" name="yearTo"></select>
                        </div>
                    </div>

                </div>

                <div class="row mt-2 mb-2">
                    <div class="col-6">
                        <div class="ml-2">
                            <p class="mb-1 small">Color</p>
                            <select asp-for="Color" asp-items="Model.Colors" class="mdb-select md-form container" name="color"></select>
                        </div>
                    </div>

                    <div class="col-6 pl-0 pr-4">
                        <div class="ml-2">
                            <p class="mb-1 small">City</p>
                            <select asp-for="City" asp-items="Model.Cities" class="mdb-select md-form container" name="town"></select>
                        </div>
                    </div>

                </div>

                <div class="row mt-4 mb-2">
                    <div class="col-md-4 offset-md-4 pl-0 pr-4">
                        <div class="ml-2">
                            <input class="container" style="margin-top:20px;" type="submit" value="Search" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>